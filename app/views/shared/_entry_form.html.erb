<%= form_for(@entry) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <h5>Create new entry:</h5>
    <%= f.text_field :title, placeholder: "Title new entry..." %>
    <%= f.text_area :content, placeholder: "Content new entry..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>